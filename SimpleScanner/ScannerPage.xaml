<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cc="clr-namespace:SimpleScanner.CustomControls"
             x:Class="SimpleScanner.ScannerPage">

        <VerticalStackLayout>

            <Image Source="barcode_scanner.png" MaximumHeightRequest="150" MaximumWidthRequest="150" />
            
            <Label x:Name="StageInfoLabel" TextColor="White" FontSize="50" />
            
            <cc:CustomBarcodeEntry
                x:Name="CbEntry"
                Opacity="1" />
            
        </VerticalStackLayout>

</ContentPage>
